{
  "name": "rynix-fm-management",
  "version": "1.0.0",
  "description": "Rynix FM Management - Comprehensive offline-first facility management desktop application with energy monitoring",
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "start": "concurrently \"npm run backend\" \"npm run frontend\"",
    "backend": "node backend/server.js",
    "frontend": "cd frontend && npm start",
    "build": "cd frontend && npm run build",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run backend\" \"wait-on http://localhost:3000 && electron .\"",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "build": {
    "appId": "com.rynix.fm-management",
    "productName": "Rynix FM Management",
    "directories": {
      "output": "dist"
    },
    "files": [
      "frontend/build/**/*",
      "backend/**/*",
      "electron/**/*",
      "database/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "frontend/public/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "frontend/public/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "frontend/public/icon.png"
    }
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "electron": "^22.0.0",
    "electron-builder": "^24.0.0",
    "electron-packager": "^17.1.2",
    "jest": "^29.0.0",
    "supertest": "^6.3.0",
    "wait-on": "^7.0.0"
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "better-sqlite3": "^12.2.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.18.0",
    "multer": "^2.0.2",
    "sqlite3": "^5.1.6"
  },
  "author": "Facility Manager Team",
  "license": "MIT"
}
